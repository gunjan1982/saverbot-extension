{
  "manifest_version": 3,
  "name": "SaverBot - Save to Notion",
  "version": "1.0.0",
  "description": "Save articles, PDFs, and videos to Notion with AI summaries",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "SaverBot"
  },
  "background": {"service_worker": "src/background/background.js"},
  "content_scripts": [{"matches": ["<all_urls>"], "js": ["src/content/content.js"]}]
}
